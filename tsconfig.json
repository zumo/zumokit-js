{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es6",
      "dom"
    ],
    "outDir": "./dist/",
    "allowJs": true,
    "target": "es5",
    "strict": true,
    "strictPropertyInitialization": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "declaration": true
  },
  "include": [
    "./index.ts",
    "./src/**/*"
  ]
}