{
  "compilerOptions": {
    "lib": [
      "es2018",
    ],
    "outDir": "./dist/",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "strict": true,
    "strictPropertyInitialization": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": [
    "./index.ts",
    "./*.d.ts",
    "./src/**/*"
  ]
}